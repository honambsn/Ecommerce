@model Ecommerce.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Login account</h1>
		<form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
